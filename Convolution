clc;
clear;
close;

x = input("Enter the sequence x = ");
h = input("Enter the sequence h = ");

y = conv(x, h);

// Plot x
subplot(3,1,1);
plot2d3(x);
xlabel("Samples");
ylabel("Amplitude");
title("Linear Convolution of Signals");

// Plot h
subplot(3,1,2);
plot2d3(h);
xlabel("Samples");
ylabel("Amplitude");

// Plot y
subplot(3,1,3);
plot2d3(y);
xgrid(5, 1, 7);
xlabel("Samples");
ylabel("Amplitude");

// Display results
disp("x = ", x);
disp("h = ", h);
disp("y = ", y);
